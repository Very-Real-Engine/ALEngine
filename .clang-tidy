Checks: '-*,readability-identifier-naming'
CheckOptions:
  # 클래스, 구조체: PascalCase (첫 글자 대문자, 이후 문자 알파벳 또는 숫자)
  - key: readability-identifier-naming.ClassCase
    value: PascalCase
  - key: readability-identifier-naming.ClassRegexp
    value: '^[A-Z][a-zA-Z0-9]*$'

  # 함수: camelCase (첫 글자 소문자)
  - key: readability-identifier-naming.FunctionCase
    value: camelCase
  - key: readability-identifier-naming.FunctionRegexp
    value: '^[a-z][a-zA-Z0-9]*$'

  # 변수: camelCase (일반 변수)
  - key: readability-identifier-naming.VariableCase
    value: camelCase
  - key: readability-identifier-naming.VariableRegexp
    value: '^[a-z][a-zA-Z0-9]*$'

  # 상수: UPPER_SNAKE_CASE (대문자와 언더스코어)
  - key: readability-identifier-naming.ConstantCase
    value: UPPER_SNAKE_CASE
  - key: readability-identifier-naming.ConstantRegexp
    value: '^[A-Z][A-Z0-9_]*$'

  # 멤버 변수: m_ 접두사 + camelCase (접두사는 강제)
  - key: readability-identifier-naming.PrivateMemberPrefix
    value: 'm_'
  - key: readability-identifier-naming.PrivateMemberCase
    value: camelCase
  - key: readability-identifier-naming.PrivateMemberRegexp
    value: '^m_[a-z][a-zA-Z0-9]*$'

  # 전역 변수: g_ 접두사 + camelCase
  - key: readability-identifier-naming.GlobalVariablePrefix
    value: 'g_'
  - key: readability-identifier-naming.GlobalVariableCase
    value: camelCase
  - key: readability-identifier-naming.GlobalVariableRegexp
    value: '^g_[a-z][a-zA-Z0-9]*$'
